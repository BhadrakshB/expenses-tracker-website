<style>
  /* Features Section */
  .features-section {
    padding-block: clamp(4rem, 10vh, 8rem);
  }

  .features-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
  }

  @media (min-width: 640px) {
    .features-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .features-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
    }
  }

  /* Comparison Section */
  .comparison-section {
    padding-block: clamp(4rem, 10vh, 8rem);
  }

  .comparison-cta {
    text-align: center;
    margin-top: 2rem;
  }

  /* Social Proof Section */
  .social-proof-section {
    padding-block: clamp(4rem, 10vh, 8rem);
  }

  .stats-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
    margin-bottom: 4rem;
    padding-bottom: 4rem;
    border-bottom: 3px solid var(--background-tertiary);
  }

  .testimonials-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1.5rem;
  }

  @media (min-width: 768px) {
    .testimonials-grid {
      grid-template-columns: repeat(3, 1fr);
    }
  }

  /* CTA Banner Section */
  .cta-banner-section {
    padding-block: clamp(4rem, 10vh, 8rem);
    background: var(--accent-primary);
  }

  .cta-banner {
    text-align: center;
  }

  .cta-title {
    font-size: clamp(2.5rem, 6vw, 5rem);
    font-weight: 900;
    color: var(--background-primary);
    line-height: 1;
    margin-bottom: 1rem;
  }

  .cta-subtitle {
    font-size: 1.25rem;
    color: var(--background-primary);
    opacity: 0.8;
    margin-bottom: 2.5rem;
  }

  .cta-buttons {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: 1rem;
  }

  .cta-store-btn {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.875rem 1.5rem;
    background: var(--background-primary);
    color: var(--text-primary);
    border: 3px solid var(--background-primary);
    transition: all 150ms ease;
  }

  .cta-store-btn:hover {
    background: transparent;
    color: var(--background-primary);
    transform: translate(-4px, -4px);
    box-shadow: 4px 4px 0 var(--background-primary);
  }

  .store-icon {
    width: 28px;
    height: 28px;
  }

  .store-text {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    text-align: left;
  }

  .store-small {
    font-size: 0.625rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    opacity: 0.8;
  }

  .store-large {
    font-family: "Manrope", system-ui, sans-serif;
    font-weight: 700;
    font-size: 1rem;
  }
</style>
