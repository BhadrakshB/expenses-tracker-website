---
import BrutalButton from './BrutalButton.astro';
---

<div class="mobile-sticky-cta" id="mobile-sticky-cta">
  <div class="sticky-inner">
    <div class="sticky-text">
      <span class="sticky-heading">Start Free</span>
      <span class="sticky-subtext">No signup required</span>
    </div>
    <div class="sticky-buttons">
      <a 
        href="https://apps.apple.com/app/expenses-tracker" 
        class="store-btn"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="Download on App Store"
      >
        <svg viewBox="0 0 24 24" fill="currentColor" class="store-icon">
          <path d="M18.71 19.5c-.83 1.24-1.71 2.45-3.05 2.47-1.34.03-1.77-.79-3.29-.79-1.53 0-2 .77-3.27.82-1.31.05-2.3-1.32-3.14-2.53C4.25 17 2.94 12.45 4.7 9.39c.87-1.52 2.43-2.48 4.12-2.51 1.28-.02 2.5.87 3.29.87.78 0 2.26-1.07 3.81-.91.65.03 2.47.26 3.64 1.98-.09.06-2.17 1.28-2.15 3.81.03 3.02 2.65 4.03 2.68 4.04-.03.07-.42 1.44-1.38 2.83M13 3.5c.73-.83 1.94-1.46 2.94-1.5.13 1.17-.34 2.35-1.04 3.19-.69.85-1.83 1.51-2.95 1.42-.15-1.15.41-2.35 1.05-3.11z"/>
        </svg>
      </a>
      <a 
        href="https://play.google.com/store/apps/details?id=app.expensestracker" 
        class="store-btn"
        target="_blank"
        rel="noopener noreferrer"
        aria-label="Get it on Google Play"
      >
        <svg viewBox="0 0 24 24" fill="currentColor" class="store-icon">
          <path d="M3,20.5V3.5C3,2.91 3.34,2.39 3.84,2.15L13.69,12L3.84,21.85C3.34,21.6 3,21.09 3,20.5M16.81,15.12L6.05,21.34L14.54,12.85L16.81,15.12M20.16,10.81C20.5,11.08 20.75,11.5 20.75,12C20.75,12.5 20.5,12.92 20.16,13.19L17.89,14.5L15.39,12L17.89,9.5L20.16,10.81M6.05,2.66L16.81,8.88L14.54,11.15L6.05,2.66Z"/>
        </svg>
      </a>
    </div>
  </div>
</div>

<style>
  .mobile-sticky-cta {
    position: fixed;
    bottom: 0;
    left: 0;
    right: 0;
    z-index: 100;
    padding: 1rem;
    background: rgba(10, 10, 11, 0.95);
    backdrop-filter: blur(10px);
    border-top: 3px solid var(--text-primary);
    transform: translateY(100%);
    transition: transform 300ms ease;
  }
  
  .mobile-sticky-cta.visible {
    transform: translateY(0);
  }
  
  @media (min-width: 769px) {
    .mobile-sticky-cta {
      display: none !important;
    }
  }
  
  .sticky-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 1rem;
    max-width: 500px;
    margin: 0 auto;
  }
  
  .sticky-text {
    display: flex;
    flex-direction: column;
  }
  
  .sticky-heading {
    font-family: 'Manrope', system-ui, sans-serif;
    font-weight: 800;
    font-size: 1rem;
    color: var(--accent-primary);
  }
  
  .sticky-subtext {
    font-size: 0.75rem;
    color: var(--text-secondary);
  }
  
  .sticky-buttons {
    display: flex;
    gap: 0.5rem;
  }
  
  .store-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 48px;
    height: 48px;
    background: var(--accent-primary);
    border: 2px solid var(--accent-primary);
    color: var(--background-primary);
    transition: all 150ms ease;
  }
  
  .store-btn:hover {
    background: transparent;
    color: var(--accent-primary);
  }
  
  .store-icon {
    width: 24px;
    height: 24px;
  }
</style>

<script>
  const stickyCta = document.getElementById('mobile-sticky-cta');
  const heroSection = document.querySelector('.hero-section');
  
  if (stickyCta && heroSection) {
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            stickyCta.classList.remove('visible');
          } else {
            stickyCta.classList.add('visible');
          }
        });
      },
      { threshold: 0 }
    );
    
    observer.observe(heroSection);
  }
</script>
