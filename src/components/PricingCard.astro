---
import BrutalButton from './BrutalButton.astro';

export interface Feature {
  text: string;
  included: boolean;
}

export interface Props {
  name: string;
  price: string;
  period?: string;
  description: string;
  features: Feature[];
  ctaText: string;
  ctaHref: string;
  highlighted?: boolean;
  badge?: string;
}

const { 
  name, 
  price, 
  period, 
  description, 
  features, 
  ctaText, 
  ctaHref, 
  highlighted = false,
  badge,
} = Astro.props;
---

<div class:list={['pricing-card', { highlighted }]}>
  {badge && <div class="card-badge">{badge}</div>}
  
  <div class="card-header">
    <h3 class="plan-name">{name}</h3>
    <div class="plan-price">
      <span class="price-value">{price}</span>
      {period && <span class="price-period">/{period}</span>}
    </div>
    <p class="plan-description">{description}</p>
  </div>
  
  <ul class="feature-list">
    {features.map(feature => (
      <li class:list={['feature-item', { included: feature.included, excluded: !feature.included }]}>
        <span class="feature-icon">{feature.included ? '✓' : '—'}</span>
        <span class="feature-text">{feature.text}</span>
      </li>
    ))}
  </ul>
  
  <div class="card-footer">
    <BrutalButton 
      href={ctaHref} 
      variant={highlighted ? 'primary' : 'secondary'} 
      fullWidth
    >
      {ctaText}
    </BrutalButton>
  </div>
</div>

<style>
  .pricing-card {
    display: flex;
    flex-direction: column;
    background: var(--background-secondary);
    border: 3px solid var(--text-primary);
    padding: 2rem;
    position: relative;
    transition: transform 150ms ease;
  }
  
  .pricing-card:hover {
    transform: translateY(-4px);
  }
  
  .pricing-card.highlighted {
    border: 4px solid var(--accent-primary);
    background: var(--background-tertiary);
  }
  
  .card-badge {
    position: absolute;
    top: -1px;
    left: 50%;
    transform: translateX(-50%) translateY(-50%);
    background: var(--accent-primary);
    color: var(--background-primary);
    font-family: 'Manrope', system-ui, sans-serif;
    font-weight: 800;
    font-size: 0.625rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    padding: 0.5rem 1rem;
  }
  
  .card-header {
    text-align: center;
    padding-bottom: 1.5rem;
    border-bottom: 2px solid var(--background-primary);
  }
  
  .plan-name {
    font-family: 'Manrope', system-ui, sans-serif;
    font-size: 0.875rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--text-secondary);
    margin-bottom: 1rem;
  }
  
  .highlighted .plan-name {
    color: var(--accent-primary);
  }
  
  .plan-price {
    display: flex;
    align-items: baseline;
    justify-content: center;
    gap: 0.25rem;
    margin-bottom: 0.75rem;
  }
  
  .price-value {
    font-family: 'Manrope', system-ui, sans-serif;
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 800;
    color: var(--text-primary);
    line-height: 1;
  }
  
  .price-period {
    font-size: 1rem;
    color: var(--text-muted);
  }
  
  .plan-description {
    font-size: 0.9375rem;
    color: var(--text-secondary);
    line-height: 1.5;
  }
  
  .feature-list {
    list-style: none;
    padding: 1.5rem 0;
    margin: 0;
    flex-grow: 1;
  }
  
  .feature-item {
    display: flex;
    align-items: flex-start;
    gap: 0.75rem;
    padding: 0.625rem 0;
    border-bottom: 1px solid var(--background-primary);
  }
  
  .feature-item:last-child {
    border-bottom: none;
  }
  
  .feature-icon {
    flex-shrink: 0;
    font-size: 1rem;
    width: 24px;
    text-align: center;
  }
  
  .included .feature-icon {
    color: var(--accent-primary);
    font-weight: 700;
  }
  
  .excluded .feature-icon {
    color: var(--text-muted);
  }
  
  .feature-text {
    font-size: 0.9375rem;
    color: var(--text-secondary);
  }
  
  .included .feature-text {
    color: var(--text-primary);
  }
  
  .excluded .feature-text {
    color: var(--text-muted);
  }
  
  .card-footer {
    padding-top: 0.5rem;
  }
</style>
