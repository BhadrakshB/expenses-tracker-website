---
const currentYear = new Date().getFullYear();

const footerLinks = {
  company: [
    { href: '/about', label: 'About' },
    { href: '/contact', label: 'Contact' },
    { href: '/blog', label: 'Blog' },
  ],
  product: [
    { href: '/#features', label: 'Features' },
    { href: '/pricing', label: 'Pricing' },
    { href: '/changelog', label: 'Changelog' },
  ],
  legal: [
    { href: '/terms', label: 'Terms of Service' },
    { href: '/privacy', label: 'Privacy Policy' },
    { href: '/refunds', label: 'Refund Policy' },
  ],
  download: [
    { href: 'https://apps.apple.com/app/expenses-tracker', label: 'iOS App', external: true },
    { href: 'https://play.google.com/store/apps/details?id=app.expensestracker', label: 'Android App', external: true },
  ],
};

const socialLinks = [
  { href: 'https://x.com/expensestracker', label: 'X (Twitter)', icon: 'X' },
  { href: 'https://instagram.com/expensestracker', label: 'Instagram', icon: 'IG' },
  { href: 'https://youtube.com/@expensestracker', label: 'YouTube', icon: 'YT' },
];
---

<footer class="footer">
  <div class="container">
    <div class="footer-grid">
      <!-- Brand Column -->
      <div class="footer-brand">
        <a href="/" class="footer-logo">
          <span class="logo-icon">ðŸ’°</span>
          <span class="logo-text">EXPENSES<span class="logo-accent">TRACKER</span></span>
        </a>
        <p class="footer-tagline">
          Take control of your money. Track every cent, plan your future.
        </p>
        <div class="footer-social">
          {socialLinks.map(link => (
            <a 
              href={link.href} 
              class="social-link"
              target="_blank"
              rel="noopener noreferrer"
              aria-label={link.label}
            >
              {link.icon}
            </a>
          ))}
        </div>
      </div>
      
      <!-- Company Links -->
      <div class="footer-column">
        <h4 class="footer-heading">Company</h4>
        <ul class="footer-links">
          {footerLinks.company.map(link => (
            <li><a href={link.href}>{link.label}</a></li>
          ))}
        </ul>
      </div>
      
      <!-- Product Links -->
      <div class="footer-column">
        <h4 class="footer-heading">Product</h4>
        <ul class="footer-links">
          {footerLinks.product.map(link => (
            <li><a href={link.href}>{link.label}</a></li>
          ))}
        </ul>
      </div>
      
      <!-- Legal Links -->
      <div class="footer-column">
        <h4 class="footer-heading">Legal</h4>
        <ul class="footer-links">
          {footerLinks.legal.map(link => (
            <li><a href={link.href}>{link.label}</a></li>
          ))}
        </ul>
      </div>
      
      <!-- Download Links -->
      <div class="footer-column">
        <h4 class="footer-heading">Download</h4>
        <ul class="footer-links">
          {footerLinks.download.map(link => (
            <li>
              <a 
                href={link.href}
                target="_blank"
                rel="noopener noreferrer"
              >
                {link.label} â†—
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
    
    <div class="footer-bottom">
      <p class="copyright">
        Â© {currentYear} Expenses Tracker. All rights reserved.
      </p>
      <div class="made-in-india">
        <span class="flag">ðŸ‡®ðŸ‡³</span>
        Made in India
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--background-secondary);
    border-top: 3px solid var(--text-primary);
    padding-block: 4rem 2rem;
  }
  
  .footer-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
  }
  
  @media (min-width: 640px) {
    .footer-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  
  @media (min-width: 1024px) {
    .footer-grid {
      grid-template-columns: 2fr repeat(4, 1fr);
    }
  }
  
  /* Brand */
  .footer-brand {
    grid-column: 1 / -1;
  }
  
  @media (min-width: 1024px) {
    .footer-brand {
      grid-column: auto;
    }
  }
  
  .footer-logo {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    margin-bottom: 1rem;
  }
  
  .footer-logo .logo-icon {
    font-size: 1.5rem;
  }
  
  .footer-logo .logo-text {
    font-family: 'Manrope', system-ui, sans-serif;
    font-weight: 800;
    font-size: 1.125rem;
    letter-spacing: -0.02em;
    color: var(--text-primary);
  }
  
  .footer-logo .logo-accent {
    color: var(--accent-primary);
  }
  
  .footer-tagline {
    color: var(--text-secondary);
    font-size: 0.9375rem;
    line-height: 1.6;
    max-width: 280px;
    margin-bottom: 1.5rem;
  }
  
  .footer-social {
    display: flex;
    gap: 0.75rem;
  }
  
  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border: 2px solid var(--text-muted);
    font-family: 'Manrope', system-ui, sans-serif;
    font-weight: 700;
    font-size: 0.75rem;
    color: var(--text-secondary);
    transition: all 150ms ease;
  }
  
  .social-link:hover {
    border-color: var(--accent-primary);
    color: var(--accent-primary);
    transform: translateY(-2px);
  }
  
  /* Columns */
  .footer-column {
    min-width: 0;
  }
  
  .footer-heading {
    font-family: 'Manrope', system-ui, sans-serif;
    font-weight: 700;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--text-primary);
    margin-bottom: 1rem;
  }
  
  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .footer-links li {
    margin-bottom: 0.75rem;
  }
  
  .footer-links a {
    color: var(--text-secondary);
    font-size: 0.9375rem;
    transition: color 150ms ease;
  }
  
  .footer-links a:hover {
    color: var(--accent-primary);
  }
  
  /* Bottom */
  .footer-bottom {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: center;
    justify-content: space-between;
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 2px solid var(--background-tertiary);
  }
  
  @media (min-width: 640px) {
    .footer-bottom {
      flex-direction: row;
    }
  }
  
  .copyright {
    color: var(--text-muted);
    font-size: 0.875rem;
  }
  
  .made-in-india {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-family: 'Manrope', system-ui, sans-serif;
    font-weight: 600;
    font-size: 0.75rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--text-secondary);
    padding: 0.5rem 1rem;
    border: 2px solid var(--text-muted);
  }
  
  .flag {
    font-size: 1rem;
  }
</style>
