---
import BaseLayout from "./BaseLayout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

export interface Props {
  title: string;
  description: string;
  lastUpdated: string;
  version?: string;
  canonical?: string;
}

const {
  title,
  description,
  lastUpdated,
  version = "1.0",
  canonical,
} = Astro.props;
---

<BaseLayout title={title} description={description} canonical={canonical}>
  <Header slot="header" />

  <article class="legal-page">
    <div class="container">
      <header class="legal-header">
        <span class="page-badge">ðŸ“„ Legal</span>
        <h1 class="legal-title">{title}</h1>
        <div class="legal-meta">
          <span class="meta-item">
            <strong>Last Updated:</strong>
            {lastUpdated}
          </span>
          <span class="meta-item">
            <strong>Version:</strong>
            {version}
          </span>
        </div>
      </header>

      <div class="legal-layout">
        <aside class="toc-sidebar">
          <nav class="toc" aria-label="Table of contents">
            <p class="toc-title">On This Page</p>
            <div id="toc-links">
              <!-- Populated by JavaScript -->
            </div>
          </nav>
        </aside>

        <div class="legal-content">
          <slot />

          <div class="legal-footer">
            <p class="disclaimer">
              <strong>Disclaimer:</strong> This document is provided for your information
              only. It does not constitute legal advice. If you have questions, please
              consult a legal professional.
            </p>
          </div>
        </div>
      </div>
    </div>
  </article>

  <Footer slot="footer" />
</BaseLayout>

<style>
  /* Apple-style Light Theme */
  .legal-page {
    padding-block: clamp(3rem, 8vh, 5rem) clamp(4rem, 10vh, 8rem);
    background: #ffffff;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
  }

  .legal-header {
    max-width: 800px;
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 1px solid #e5e5e7;
  }

  .page-badge {
    display: inline-block;
    padding: 0.5rem 1rem;
    background: #f5f5f7;
    border-radius: 100px;
    font-size: 0.875rem;
    font-weight: 600;
    color: #86868b;
    margin-bottom: 1.5rem;
  }

  .legal-title {
    font-family:
      "Inter",
      -apple-system,
      system-ui,
      sans-serif;
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 700;
    line-height: 1.1;
    letter-spacing: -0.02em;
    color: #1d1d1f;
    margin-bottom: 1rem;
  }

  .legal-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
  }

  .meta-item {
    font-family:
      "Inter",
      -apple-system,
      system-ui,
      sans-serif;
    font-size: 0.875rem;
    color: #86868b;
  }

  .meta-item strong {
    color: #1d1d1f;
    font-size: 0.75rem;
    display: block;
    margin-bottom: 0.25rem;
  }

  .legal-layout {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
  }

  @media (min-width: 1024px) {
    .legal-layout {
      grid-template-columns: 250px 1fr;
    }
  }

  /* Table of Contents Sidebar */
  .toc-sidebar {
    display: none;
  }

  @media (min-width: 1024px) {
    .toc-sidebar {
      display: block;
    }
  }

  .toc {
    position: sticky;
    top: 6rem;
    padding: 1.5rem;
    background: #f5f5f7;
    border-radius: 16px;
    max-height: calc(100vh - 8rem);
    overflow-y: auto;
  }

  .toc-title {
    font-family:
      "Inter",
      -apple-system,
      system-ui,
      sans-serif;
    font-size: 0.6875rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: #86868b;
    margin-bottom: 1rem;
  }

  .toc :global(a) {
    display: block;
    padding: 0.5rem 0;
    font-family:
      "Inter",
      -apple-system,
      system-ui,
      sans-serif;
    font-size: 0.8125rem;
    color: #86868b;
    border-bottom: 1px solid #e5e5e7;
    line-height: 1.4;
    transition: all 150ms ease;
  }

  .toc :global(a:last-child) {
    border-bottom: none;
  }

  .toc :global(a:hover) {
    color: #667eea;
  }

  .toc :global(a.active) {
    color: #667eea;
    font-weight: 600;
  }

  /* Legal Content */
  .legal-content {
    max-width: 800px;
  }

  .legal-content :global(h2) {
    font-family:
      "Inter",
      -apple-system,
      system-ui,
      sans-serif;
    font-size: 1.5rem;
    font-weight: 700;
    letter-spacing: -0.01em;
    color: #1d1d1f;
    margin-top: 3rem;
    margin-bottom: 1rem;
    padding-top: 1.5rem;
    border-top: 1px solid #e5e5e7;
    scroll-margin-top: 6rem;
  }

  .legal-content :global(h2:first-of-type) {
    margin-top: 0;
    padding-top: 0;
    border-top: none;
  }

  .legal-content :global(h3) {
    font-family:
      "Inter",
      -apple-system,
      system-ui,
      sans-serif;
    font-size: 1.125rem;
    font-weight: 600;
    color: #1d1d1f;
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }

  .legal-content :global(p) {
    font-family:
      "Inter",
      -apple-system,
      system-ui,
      sans-serif;
    font-size: 1.0625rem;
    line-height: 1.8;
    color: #86868b;
    margin-bottom: 1.25rem;
  }

  .legal-content :global(ul),
  .legal-content :global(ol) {
    margin-bottom: 1.25rem;
    padding-left: 1.5rem;
  }

  .legal-content :global(li) {
    font-family:
      "Inter",
      -apple-system,
      system-ui,
      sans-serif;
    font-size: 1.0625rem;
    line-height: 1.8;
    color: #86868b;
    margin-bottom: 0.5rem;
  }

  .legal-content :global(strong) {
    color: #1d1d1f;
    font-weight: 600;
  }

  .legal-content :global(a) {
    color: #667eea;
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  .legal-content :global(a:hover) {
    color: #764ba2;
  }

  /* Callout boxes */
  .legal-content :global(.callout) {
    padding: 1.25rem 1.5rem;
    margin: 1.5rem 0;
    border-radius: 12px;
    background: #f5f5f7;
  }

  .legal-content :global(.callout-warning) {
    background: linear-gradient(
      135deg,
      rgba(250, 112, 154, 0.1),
      rgba(254, 225, 64, 0.1)
    );
    border-left: 4px solid #fa709a;
  }

  .legal-content :global(.callout-success) {
    background: linear-gradient(
      135deg,
      rgba(67, 233, 123, 0.1),
      rgba(56, 249, 215, 0.1)
    );
    border-left: 4px solid #43e97b;
  }

  .legal-content :global(.callout p:last-child) {
    margin-bottom: 0;
  }

  /* Legal Footer */
  .legal-footer {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid #e5e5e7;
  }

  .disclaimer {
    font-family:
      "Inter",
      -apple-system,
      system-ui,
      sans-serif;
    font-size: 0.875rem;
    color: #86868b;
    font-style: italic;
    line-height: 1.6;
  }

  .disclaimer strong {
    color: #1d1d1f;
    font-style: normal;
  }
</style>

<script>
  // Build table of contents from h2 elements
  const content = document.querySelector(".legal-content");
  const tocLinks = document.getElementById("toc-links");

  if (content && tocLinks) {
    const headings = content.querySelectorAll("h2");

    headings.forEach((heading, index) => {
      // Add id if not present
      if (!heading.id) {
        heading.id =
          heading.textContent?.toLowerCase().replace(/[^a-z0-9]+/g, "-") ||
          `section-${index}`;
      }

      const link = document.createElement("a");
      link.href = `#${heading.id}`;
      link.textContent = heading.textContent;
      tocLinks.appendChild(link);
    });

    // Active state on scroll
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach((entry) => {
          const id = entry.target.id;
          const link = tocLinks.querySelector(`a[href="#${id}"]`);
          if (link) {
            if (entry.isIntersecting) {
              tocLinks
                .querySelectorAll("a")
                .forEach((a) => a.classList.remove("active"));
              link.classList.add("active");
            }
          }
        });
      },
      { rootMargin: "-20% 0px -70% 0px" },
    );

    headings.forEach((heading) => observer.observe(heading));
  }
</script>
