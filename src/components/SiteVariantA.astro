---

<!-- Hero Section -->{preLaunch ? <PreLaunchHeroA /> : <LaunchHeroA />}

<!-- Features Section -->
<section class="features-section section-dark" id="features">
  <div class="container">
    <SectionHeading
      title="Built for Real Life"
      subtitle="Everything you need to track expenses, whether you're online or offline."
      bleed
    />
    <div class="features-grid">
      {
        features.map((feature) => (
          <FeatureCard
            icon={feature.icon}
            title={feature.title}
            description={feature.description}
            isPro={feature.isPro}
          />
        ))
      }
    </div>
  </div>
</section>

<!-- Comparison Section -->
<section class="comparison-section">
  <div class="container container-narrow">
    <SectionHeading
      title="Free vs Pro"
      subtitle="Start free, upgrade when you're ready. No pressure."
      align="center"
    />
    <ComparisonTable features={comparisonFeatures} />
    <div class="comparison-cta">
      <BrutalButton href="/pricing" variant="primary" size="lg">
        Upgrade to Pro ‚Üí
      </BrutalButton>
    </div>
  </div>
</section>

<!-- CTA Banner Section -->
<section class="cta-banner-section">
  <div class="container">
    <div class="cta-banner">
      <h2 class="cta-title">START TRACKING TODAY</h2>
      <p class="cta-subtitle">
        No signup. No credit card. Just download and go.
      </p>
