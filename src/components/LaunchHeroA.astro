<script>
  // Track app download clicks
  document.addEventListener("DOMContentLoaded", () => {
    const downloadButtons = document.querySelectorAll(
      'a[href*="apps.apple.com"], a[href*="play.google.com"]',
    );
    downloadButtons.forEach((button) => {
      button.addEventListener("click", () => {
        const href = (button as HTMLAnchorElement).href;
        (window as any).posthog?.capture("app_download_clicked", {
          variant: "A",
          store: href.includes("apple") ? "app_store" : "play_store",
        });
      });
    });
  });
</script>

<style>
  .hero-section {
    padding-block: clamp(4rem, 12vh, 8rem) clamp(6rem, 15vh, 10rem);
    overflow: hidden;
  }

  .hero-container {
    display: grid;
    grid-template-columns: 1fr;
    gap: 4rem;
    align-items: center;
  }

  @media (min-width: 1024px) {
    .hero-container {
      grid-template-columns: 1fr 1fr;
    }
  }

  .hero-content {
    max-width: 600px;
  }

  .hero-title {
    font-size: clamp(3rem, 10vw, 6rem);
    font-weight: 900;
    line-height: 0.95;
    letter-spacing: -0.04em;
    margin-bottom: 1.5rem;
  }

  .hero-accent {
    color: var(--accent-primary);
  }

  .hero-subtitle {
    font-size: 1.25rem;
    color: var(--text-secondary);
    line-height: 1.6;
    margin-bottom: 2rem;
    max-width: 500px;
  }

  .hero-counter {
    display: inline-flex;
    flex-direction: column;
    padding: 1rem 1.5rem;
    background: var(--background-secondary);
    border: 3px solid var(--accent-primary);
    margin-bottom: 2rem;
  }

  .counter-value {
    font-family: "Manrope", system-ui, sans-serif;
    font-size: 1.75rem;
    font-weight: 800;
    color: var(--accent-primary);
  }

  .counter-label {
    font-size: 0.875rem;
    color: var(--text-secondary);
  }

  .hero-cta {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem;
    margin-bottom: 1.5rem;
  }

  .btn-icon {
    width: 20px;
    height: 20px;
  }

  .store-badges {
    display: flex;
    gap: 1rem;
  }

  .store-badge {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--text-secondary);
    padding: 0.5rem 1rem;
    border: 2px solid var(--text-muted);
    transition: all 150ms ease;
  }

  .store-badge:hover {
    border-color: var(--accent-primary);
    color: var(--accent-primary);
  }

  .badge-icon {
    width: 18px;
    height: 18px;
  }

  .hero-visual {
    display: flex;
    justify-content: center;
  }

  .phone-mockup {
    width: 280px;
    padding: 12px;
    background: var(--background-primary);
    border: 5px solid var(--text-primary);
    border-radius: 24px;
    transform: rotate(3deg);
    transition: transform 300ms ease;
  }

  .phone-mockup:hover {
    transform: rotate(0deg) scale(1.02);
  }

  .phone-screen {
    background: var(--background-secondary);
    border-radius: 12px;
    overflow: hidden;
  }

  .app-preview {
    padding: 1rem;
  }

  .app-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-bottom: 1rem;
    border-bottom: 2px solid var(--background-tertiary);
    margin-bottom: 1rem;
  }

  .app-title {
    font-family: "Manrope", system-ui, sans-serif;
    font-weight: 700;
    font-size: 0.875rem;
  }

  .app-balance {
    font-family: "Manrope", system-ui, sans-serif;
    font-weight: 800;
    font-size: 1.25rem;
    color: var(--accent-primary);
  }

  .expense-list {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .expense-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem;
    background: var(--background-tertiary);
    border-left: 3px solid var(--accent-secondary);
  }

  .expense-icon {
    font-size: 1.25rem;
  }

  .expense-details {
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .expense-name {
    font-weight: 600;
    font-size: 0.8125rem;
  }

  .expense-date {
    font-size: 0.6875rem;
    color: var(--text-muted);
  }

  .expense-amount {
    font-family: "Manrope", system-ui, sans-serif;
    font-weight: 700;
    font-size: 0.875rem;
    color: var(--error);
  }
</style>
