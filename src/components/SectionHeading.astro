---
export interface Props {
  title: string;
  subtitle?: string;
  align?: 'left' | 'center';
  bleed?: boolean;
}

const { title, subtitle, align = 'left', bleed = false } = Astro.props;
---

<div class:list={['section-heading', `align-${align}`, { bleed }]}>
  <h2 class="heading-title">{title}</h2>
  {subtitle && <p class="heading-subtitle">{subtitle}</p>}
</div>

<style>
  .section-heading {
    margin-bottom: 3rem;
  }
  
  .align-center {
    text-align: center;
  }
  
  .heading-title {
    font-family: 'Manrope', system-ui, sans-serif;
    font-size: clamp(2rem, 5vw, 4rem);
    font-weight: 800;
    line-height: 1;
    letter-spacing: -0.03em;
    text-transform: uppercase;
    color: var(--text-primary);
  }
  
  .bleed .heading-title {
    margin-inline: -1rem;
  }
  
  @media (min-width: 768px) {
    .bleed .heading-title {
      margin-inline: -2rem;
    }
  }
  
  .heading-subtitle {
    font-size: 1.125rem;
    color: var(--text-secondary);
    margin-top: 1rem;
    max-width: 600px;
    line-height: 1.6;
  }
  
  .align-center .heading-subtitle {
    margin-inline: auto;
  }
</style>
