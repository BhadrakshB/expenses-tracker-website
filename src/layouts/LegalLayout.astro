---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

export interface Props {
  title: string;
  description: string;
  lastUpdated: string;
  version?: string;
  canonical?: string;
}

const { title, description, lastUpdated, version = '1.0', canonical } = Astro.props;
---

<BaseLayout title={title} description={description} canonical={canonical}>
  <Header slot="header" />
  
  <article class="legal-page">
    <div class="container">
      <header class="legal-header">
        <h1 class="legal-title">{title}</h1>
        <div class="legal-meta">
          <span class="meta-item">
            <strong>Last Updated:</strong> {lastUpdated}
          </span>
          <span class="meta-item">
            <strong>Version:</strong> {version}
          </span>
        </div>
      </header>
      
      <div class="legal-layout">
        <aside class="toc-sidebar">
          <nav class="toc" aria-label="Table of contents">
            <p class="toc-title">On This Page</p>
            <div id="toc-links">
              <!-- Populated by JavaScript -->
            </div>
          </nav>
        </aside>
        
        <div class="legal-content">
          <slot />
          
          <div class="legal-footer">
            <p class="disclaimer">
              <strong>Disclaimer:</strong> This document is provided for your information only. 
              It does not constitute legal advice. If you have questions, please consult a legal professional.
            </p>
          </div>
        </div>
      </div>
    </div>
  </article>
  
  <Footer slot="footer" />
</BaseLayout>

<style>
  .legal-page {
    padding-block: clamp(3rem, 8vh, 5rem) clamp(4rem, 10vh, 8rem);
  }
  
  .legal-header {
    max-width: 800px;
    margin-bottom: 3rem;
    padding-bottom: 2rem;
    border-bottom: 3px solid var(--text-muted);
  }
  
  .legal-title {
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 900;
    line-height: 1.1;
    letter-spacing: -0.02em;
    text-transform: uppercase;
    margin-bottom: 1rem;
  }
  
  .legal-meta {
    display: flex;
    flex-wrap: wrap;
    gap: 1.5rem;
  }
  
  .meta-item {
    font-size: 0.875rem;
    color: var(--text-secondary);
  }
  
  .meta-item strong {
    color: var(--text-primary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
    font-size: 0.75rem;
    display: block;
    margin-bottom: 0.25rem;
  }
  
  .legal-layout {
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
  }
  
  @media (min-width: 1024px) {
    .legal-layout {
      grid-template-columns: 250px 1fr;
    }
  }
  
  /* Table of Contents Sidebar */
  .toc-sidebar {
    display: none;
  }
  
  @media (min-width: 1024px) {
    .toc-sidebar {
      display: block;
    }
  }
  
  .toc {
    position: sticky;
    top: 6rem;
    padding: 1.25rem;
    background: var(--background-secondary);
    border: 2px solid var(--text-muted);
    max-height: calc(100vh - 8rem);
    overflow-y: auto;
  }
  
  .toc-title {
    font-family: 'Manrope', system-ui, sans-serif;
    font-size: 0.6875rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--text-muted);
    margin-bottom: 1rem;
  }
  
  .toc :global(a) {
    display: block;
    padding: 0.5rem 0;
    font-size: 0.8125rem;
    color: var(--text-secondary);
    border-bottom: 1px solid var(--background-tertiary);
    line-height: 1.4;
    transition: all 150ms ease;
  }
  
  .toc :global(a:last-child) {
    border-bottom: none;
  }
  
  .toc :global(a:hover) {
    color: var(--accent-primary);
  }
  
  .toc :global(a.active) {
    color: var(--accent-primary);
    font-weight: 600;
  }
  
  /* Legal Content */
  .legal-content {
    max-width: 800px;
  }
  
  .legal-content :global(h2) {
    font-size: 1.375rem;
    font-weight: 800;
    text-transform: uppercase;
    letter-spacing: 0.02em;
    color: var(--text-primary);
    margin-top: 3rem;
    margin-bottom: 1rem;
    padding-top: 1.5rem;
    border-top: 2px solid var(--text-muted);
    scroll-margin-top: 6rem;
  }
  
  .legal-content :global(h2:first-of-type) {
    margin-top: 0;
    padding-top: 0;
    border-top: none;
  }
  
  .legal-content :global(h3) {
    font-size: 1.125rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.01em;
    color: var(--text-primary);
    margin-top: 2rem;
    margin-bottom: 0.75rem;
  }
  
  .legal-content :global(p) {
    font-size: 1.0625rem;
    line-height: 1.8;
    color: var(--text-secondary);
    margin-bottom: 1.25rem;
  }
  
  .legal-content :global(ul),
  .legal-content :global(ol) {
    margin-bottom: 1.25rem;
    padding-left: 1.5rem;
  }
  
  .legal-content :global(li) {
    font-size: 1.0625rem;
    line-height: 1.8;
    color: var(--text-secondary);
    margin-bottom: 0.5rem;
  }
  
  .legal-content :global(strong) {
    color: var(--text-primary);
    font-weight: 600;
  }
  
  .legal-content :global(a) {
    color: var(--accent-primary);
    text-decoration: underline;
    text-underline-offset: 2px;
  }
  
  .legal-content :global(a:hover) {
    color: var(--text-primary);
  }
  
  /* Callout boxes */
  .legal-content :global(.callout) {
    padding: 1.25rem 1.5rem;
    margin: 1.5rem 0;
    border-left: 4px solid var(--accent-primary);
    background: var(--background-secondary);
  }
  
  .legal-content :global(.callout-warning) {
    border-left-color: var(--warning);
  }
  
  .legal-content :global(.callout-success) {
    border-left-color: var(--success);
  }
  
  .legal-content :global(.callout p:last-child) {
    margin-bottom: 0;
  }
  
  /* Legal Footer */
  .legal-footer {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 2px solid var(--text-muted);
  }
  
  .disclaimer {
    font-size: 0.875rem;
    color: var(--text-muted);
    font-style: italic;
    line-height: 1.6;
  }
  
  .disclaimer strong {
    color: var(--text-secondary);
    font-style: normal;
  }
</style>

<script>
  // Build table of contents from h2 elements
  const content = document.querySelector('.legal-content');
  const tocLinks = document.getElementById('toc-links');
  
  if (content && tocLinks) {
    const headings = content.querySelectorAll('h2');
    
    headings.forEach((heading, index) => {
      // Add id if not present
      if (!heading.id) {
        heading.id = heading.textContent?.toLowerCase().replace(/[^a-z0-9]+/g, '-') || `section-${index}`;
      }
      
      const link = document.createElement('a');
      link.href = `#${heading.id}`;
      link.textContent = heading.textContent;
      tocLinks.appendChild(link);
    });
    
    // Active state on scroll
    const observer = new IntersectionObserver(
      (entries) => {
        entries.forEach(entry => {
          const id = entry.target.id;
          const link = tocLinks.querySelector(`a[href="#${id}"]`);
          if (link) {
            if (entry.isIntersecting) {
              tocLinks.querySelectorAll('a').forEach(a => a.classList.remove('active'));
              link.classList.add('active');
            }
          }
        });
      },
      { rootMargin: '-20% 0px -70% 0px' }
    );
    
    headings.forEach(heading => observer.observe(heading));
  }
</script>
